@model IEnumerable<haiku_mvc.Models.USERS>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.NameSurname)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.UserName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Password)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TotalFollowers)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TotalFollows)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TotalHaiku)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TotalLikes)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TotalShares)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.NameSurname)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.UserName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Password)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TotalFollowers)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TotalFollows)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TotalHaiku)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TotalLikes)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TotalShares)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.UserId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.UserId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.UserId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
